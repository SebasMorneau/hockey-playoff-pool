{
    "name": "hockey-pool-backend",
    "version": "1.0.0",
    "description": "Backend API for NHL Playoffs Hockey Pool",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "migrate": "sequelize-cli db:migrate",
        "migrate:undo": "sequelize-cli db:migrate:undo",
        "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
        "migrate:create": "sequelize-cli migration:create --name",
        "test:nhl-api": "node src/scripts/test-nhl-api.js",
        "test:nhl-sync": "node --loader ts-node/esm src/scripts/test-nhl-sync-direct.js"
    },
    "dependencies": {
        "@types/axios": "^0.9.36",
        "@types/node-cron": "^3.0.11",
        "@types/winston": "^2.4.4",
        "axios": "^1.9.0",
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "mysql2": "^3.14.0",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.8",
        "pm2": "^5.3.1",
        "sequelize": "^6.35.2",
        "sqlite3": "^5.1.7",
        "typescript": "^5.3.3",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/knex": "^0.15.2",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.17.32",
        "@types/nodemailer": "^6.4.14",
        "@types/supertest": "^2.0.16",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "sequelize-cli": "^6.6.2",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}